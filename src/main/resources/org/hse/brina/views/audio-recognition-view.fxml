<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox style="-fx-background-color: white; -fx-padding: 10" stylesheets="@../css/sign-in-page-style.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.hse.brina.utils.AudioRecognitionController">
   <VBox fx:id="textVBox" alignment="CENTER" spacing="10" styleClass="white-box">
      <HBox alignment="CENTER" spacing="10" maxHeight="50" styleClass="white-box">
         <Text text="Audio file:" styleClass="simple-text"/>
         <Text fx:id="audioName" styleClass="simple-text"/>
      </HBox>
      <HBox alignment="CENTER" spacing="10" maxHeight="50" styleClass="white-box">
         <Button fx:id="loadAudio" onAction="#loadAudio" text="Load" styleClass="access-button"/>
         <Button fx:id="speechRecognitionButton" onAction="#recognizeSpeech" text="Recognize Speech"
                 styleClass="dark-button"/>
      </HBox>
   </VBox>
   <TextArea fx:id="resultArea" styleClass="white-box"/>
   <HBox fx:id="pasteHBox" alignment="CENTER_RIGHT" spacing="10" maxHeight="50" styleClass="white-box">
      <Button fx:id="Paste" onAction="#pasteResult" text="Paste" styleClass="dark-button"/>
   </HBox>
</VBox>
